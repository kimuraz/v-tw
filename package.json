{
    "name": "v-tw-directives",
    "version": "0.1.0",
    "description": "TailwindCSS on directives for your Vue application",
    "main": "dist/vtw.min.js",
    "module": "dist/vtw.esm.js",
    "repository": "git@github.com:kimuraz/v-tw.git",
    "author": "Kimura <j.eduardokimura@icloud.com>",
    "license": "MIT",
    "scripts": {
        "build": "rollup -c",
        "format": "prettier --write \"{src,__tests__}/**/*.js\"",
        "format:ci": "prettier \"{src,__tests__}/**/*.js\"",
        "test": "jest"
    },
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/plugin-proposal-optional-chaining": "^7.12.1",
        "@babel/preset-env": "^7.12.1",
        "@rollup/plugin-babel": "^5.2.1",
        "@rollup/plugin-typescript": "^6.1.0",
        "babel-jest": "^26.6.3",
        "jest": "^26.6.3",
        "jsdom": "^16.4.0",
        "prettier": "^2.1.2",
        "rollup": "^2.33.1",
        "rollup-plugin-terser": "^7.0.2"
    },
    "dependencies": {
        "tailwindcss": "^1.9.6",
        "vue": "^2.6.12"
    },
    "jest": {
        "setupFiles": [
            "./__tests__/__mocks__/client.js"
        ],
        "testMatch": [
            "**/__tests__/**/*.test.js"
        ]
    }
}
